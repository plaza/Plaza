<div id="content-top" class="large-caps red">
	<%= @group.visible_name %>
	<span class="button" style="float: right; opacity: 0;">
		Follow<%= image_tag("plus.png", :alt => "plus", :class => "plus-img", :id => "") %>
	</span>
</div>
<div id="content-left">
	<div class="heading">
		<div class="medium-grey" style="float: left">Info:</div>
		<a href="" class="button" style="float: right">Edit Info</a>
		<div class="clear"></div>
	</div>
	<div style="text-align: center">
		<%= image_tag("group_logo.png", :alt => "Members", :class => "", :id => "", :width => "70%") %>
	</div>
	<div class="text-block">
		<p class="small-black">About us</p>
		<p><em><%= @group.group_type.name %></em></p>
		<p><%= @group.description %></p>
	</div>
	<div class="text-block" style="text-align: left">
		<p class="small-black" style="text-align: left"><%= @group.officers_list_title %></p>
		<ul style="margin-left: 20px">
			<% @group_users.each do |user| %>
			<li><%= user.visible_name %></li>
			<% end %>
		</ul>
		<p class="small-black" style="text-align: left"><%= @group.members_list_title %></p>
		<ul style="margin-left: 20px">
			<% @group_users.each do |user| %>
			<li><%= user.visible_name %></li>
			<% end %>
		</ul>
		<!--					<img src="images/Members.png" width="165" height="108" alt="Members" />-->
	</div>
	<div class="text-block" style="text-align: left">
		<p class="small-black">Website: 
		<% if @group.website != "None specified"  %>
		<a href="<%= @group_website %>"><%= @group.website %></a>
		<% end %>
		</p>
		<p class="small-black">Email
		<% if @group.email != "None specified"  %>
		<%= @group.email %>
		<% end %>
		</p>
	</div>
</div>

